{
  "name": "log-parser",
  "version": "1.0.0",
  "description": "Log Parser",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "package": "electron-builder --dir"
  },
  "keywords": [],
  "author": "A. Lebrazi & L. Mari",
  "license": "MIT",
  "dependencies": {
    "electron-reload": "^2.0.0-alpha.1"
  },
  "devDependencies": {
    "electron": "^31.2.0",
    "electron-builder": "^22.14.5"
  },
  "build": {
    "appId": "unlimited.h.works.log-parser",
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "package.json",
      "node_modules/**/*",
      "dist/**/*",
      "assets/**/*",
      "components/**/*",
      "parsers/**/*",
      "properties/**/*",
      "renderer/**/*",
      "styles/**/*",
      "main.html",
      "preload.js"
    ]
  }
}
